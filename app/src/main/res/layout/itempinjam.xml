<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:elevation="20dp"
    android:layout_margin="15dp"
    android:background="@color/cardview_dark_background">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/namauserpinjam"
        android:text="Namauser"
        android:textColor="@color/warnatombol"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textSize="25dp"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tanggalpinjam"
        android:layout_alignStart="@+id/tanggalpinjam" />

    <TextView
        android:id="@+id/jenismobil"
        android:layout_width="200dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/namauser"
        android:textColor="@color/warnatombol"
        android:textSize="12dp"
        android:text="Jenis Mobil"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tanggalpinjam"
        android:text="tanggalpinjam"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/warnatombol"
        android:textSize="12dp"
        android:layout_alignBottom="@+id/gambarmobil"
        android:layout_alignLeft="@+id/deskripsi"
        android:layout_alignStart="@+id/deskripsi" />

</LinearLayout>
</android.support.v7.widget.CardView>